{
  "logging": {
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "level": "INFO"
  },
  "conversation": {
    "max_history": 6,
    "typing_interval": 3
  },
  "knowledge_base": {
    "directory": "./knowledge_base",
    "max_results": 4,
    "chroma_settings": {
      "anonymized_telemetry": false,
      "allow_reset": true
    }
  },
  "paths": {
    "config_dir": "config"
  }
} 